<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">

    <ImageView
        android:id="@+id/img1"
        android:src="@drawable/monymusiclogo_inv"
        android:scaleType="fitXY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:text="Pop Up Window Menu."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:id="@+id/popup_label"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:background="#AAFDE756"
        android:layout_below="@id/img1"
        />

    <TextView
        android:text="1. When you open the app list with all your songs appears below. If you don\'t have any play list, a message will appear telling you to add songs by tapping the fab + button. when you do so, a new activity opens to add songs. In this new activity you can scan your device for media files, or you can visit various online music stores to by new songs."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:id="@+id/popup_menu_text"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        android:gravity="fill_horizontal"
        android:background="#AAFDE756"
        android:layout_below="@id/popup_label"
        />


    <Button
        style="@style/button"
        android:text="@string/close"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/button"
        android:onClick="CloseWindow"/>
</RelativeLayout>