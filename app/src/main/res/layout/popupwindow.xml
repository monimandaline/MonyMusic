<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/color_text_white">

    <ScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:nestedScrollingEnabled="true">
<RelativeLayout
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/img1"
        style="@style/pop_img"
        />

    <TextView
        style="@style/pop_header"
        android:id="@+id/popup_label"
        android:layout_below="@id/img1"
        />

    <TextView
        style="@style/pop_text"
        android:id="@+id/popup_menu_text"
        android:layout_below="@id/popup_label"
        />

    <Button
    style="@style/button"
    android:text="@string/close"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/popup_menu_text"
    android:id="@+id/button"
    android:onClick="CloseWindow"/>
</RelativeLayout>
    </ScrollView>
</LinearLayout>