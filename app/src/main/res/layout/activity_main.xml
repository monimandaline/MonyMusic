<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.android.monymusic.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <ImageView style="@style/guitar_background" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    style="@style/main_menu_icon"
                    android:src="@drawable/monymusiclogo" />

                <LinearLayout
                    android:id="@+id/menu1"
                    style="@style/main_menu_layout"
                    android:layout_marginTop="20dp"
                    android:background="@color/color1">

                    <ImageView
                        style="@style/main_menu_icon"
                        android:src="@drawable/menu1" />

                    <TextView
                        android:id="@+id/menu1_textview"
                        style="@style/main_menu_txt"
                        android:text="@string/menu1" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu2"
                    style="@style/main_menu_layout"
                    android:background="@color/color2">

                    <ImageView
                        style="@style/main_menu_icon"
                        android:src="@drawable/menu2" />

                    <TextView
                        android:id="@+id/menu2_textview"
                        style="@style/main_menu_txt"
                        android:text="@string/menu2" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu3"
                    style="@style/main_menu_layout"
                    android:background="@color/color3">

                    <ImageView
                        style="@style/main_menu_icon"
                        android:src="@drawable/menu3" />

                    <TextView
                        android:id="@+id/menu3_textview"
                        style="@style/main_menu_txt"
                        android:text="@string/menu3" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu4"
                    style="@style/main_menu_layout"
                    android:background="@color/color4">

                    <ImageView
                        style="@style/main_menu_icon"
                        android:src="@drawable/menu4" />

                    <TextView
                        android:id="@+id/menu4_textview"
                        style="@style/main_menu_txt"
                        android:text="@string/menu4" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu5"
                    style="@style/main_menu_layout"
                    android:background="@color/color5">

                    <ImageView
                        style="@style/main_menu_icon"
                        android:src="@drawable/menu5" />

                    <TextView
                        android:id="@+id/menu5_textview"
                        style="@style/main_menu_txt"
                        android:text="@string/menu5" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu6"
                    style="@style/main_menu_layout"
                    android:background="@color/color6">

                    <ImageView
                        style="@style/main_menu_icon"
                        android:src="@drawable/menu6" />

                    <TextView
                        android:id="@+id/menu6_textview"
                        style="@style/main_menu_txt"
                        android:text="@string/menu6" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</FrameLayout>
