<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>


    <style name="button">
        <item name="android:textColor">@color/color_text_white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">64dp</item>
        <item name="android:paddingRight">64dp</item>
        <item name="android:textSize">@dimen/activity_text_size</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="button_add">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">50sp</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/roundedbutton</item>
    </style>

    <style name="button_help">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">50sp</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:layout_marginBottom">148dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
    </style>

    <style name="AppTheme.CustomTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="main_menu_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:scaleX">1</item>
        <item name="android:scaleY">1</item>
    </style>

    <style name="main_menu_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/margin_mini</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">@dimen/pad_mini</item>
        <item name="android:paddingTop">@dimen/pad_mini</item>
    </style>

    <style name="main_menu_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:keepScreenOn">true</item>
        <item name="android:paddingTop">@dimen/pad_mini</item>
        <item name="android:textColor">@color/color_text_white</item>
        <item name="android:textSize">@dimen/activity_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="guitar_background">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/monymusicback2</item>
    </style>

    <style name="horizontal_menu">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/colorPrimaryDark</item>

    </style>

    <style name="horizontal_menu_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:keepScreenOn">true</item>
        <item name="android:padding">@dimen/pad_mini</item>
        <item name="android:textColor">@color/color_text_white</item>
        <item name="android:textSize">@dimen/activity_text_size_mini</item>
    </style>

    <style name="header_item_1">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:width">50dip</item>
        <item name="android:height">30dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_text_white</item>
        <item name="android:background">@color/color2</item>
    </style>

    <style name="header_item_2">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:width">100dip</item>
        <item name="android:height">30dip</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/color_text_white</item>
        <item name="android:background">@color/color2</item>
        <item name="android:paddingLeft">@dimen/pad_normal</item>

    </style>

    <style name="list_item_1">
        <item name="android:text">row_id</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/activity_text_size_normal</item>
        <item name="android:width">50dip</item>
        <item name="android:textColor">@color/color_text_white</item>
        <item name="android:background">@color/color4</item>
        <item name="android:padding">@dimen/pad_mini</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="list_item_2">
        <item name="android:text">col_1</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textSize">@dimen/activity_text_size_normal</item>
        <item name="android:width">1200dip</item>
        <item name="android:textColor">@color/color_text_white</item>
        <item name="android:background">@color/color3</item>
        <item name="android:padding">@dimen/pad_normal</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="artist_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:keepScreenOn">true</item>
        <item name="android:padding">@dimen/activity_text_size_normal</item>
        <item name="android:background">@color/color2</item>
        <item name="android:textColor">@color/color_text_white</item>
        <item name="android:textSize">@dimen/activity_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="artist_pic">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="artist_details">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">left</item>
        <item name="android:keepScreenOn">true</item>
        <item name="android:padding">@dimen/pad_mini</item>
        <item name="android:textColor">@color/color_text_white</item>
        <item name="android:textSize">@dimen/activity_text_size_mini</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="pop_img">
        <item name="android:src">@drawable/monymusiclogo_inv</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/pad_normal</item>
        <item name="android:paddingRight">@dimen/pad_normal</item>
        <item name="android:paddingTop">@dimen/pad_normal</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="pop_header">
        <item name="android:text">Pop Up Header</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/pad_mini</item>
        <item name="android:paddingBottom">@dimen/pad_mini</item>
        <item name="android:paddingLeft">@dimen/pad_normal</item>
        <item name="android:paddingRight">@dimen/pad_normal</item>
        <item name="android:textSize">@dimen/activity_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/color2</item>
    </style>

    <style name="pop_text">
        <item name="android:text">Text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/pad_big</item>
        <item name="android:textSize">@dimen/activity_text_size_normal</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">fill_horizontal</item>
        <item name="android:background">@color/color2</item>
        <item name="android:layout_below">@id/popup_label</item>

    </style>
</resources>
